<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/custom_grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_delete_24" />

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="14sp"
            android:fontFamily="@font/merriweathersans_bold"
            android:text="@string/city_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/merriweathersans_bold"
            android:text="@string/time_alert"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/to"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/city_name"
            app:layout_constraintTop_toBottomOf="@+id/city_name" />

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/merriweathersans_bold"
            android:text="@string/to"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_from"
            app:layout_constraintEnd_toStartOf="@+id/txt_to"
            app:layout_constraintTop_toTopOf="@+id/txt_from"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="116dp"
            android:fontFamily="@font/merriweathersans_bold"
            android:text="@string/time_alert"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/to"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/to"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/at"
            android:textSize="14sp"
            android:fontFamily="@font/merriweathersans_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.186"
            app:layout_constraintStart_toStartOf="@+id/txt_from"
            app:layout_constraintTop_toBottomOf="@+id/txt_from"
            app:layout_constraintVertical_bias="0.021" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:textSize="14sp"
            android:fontFamily="@font/merriweathersans_bold"
            android:text="@string/time_alert"
            app:layout_constraintBottom_toBottomOf="@+id/at"
            app:layout_constraintStart_toEndOf="@+id/at"
            app:layout_constraintTop_toTopOf="@+id/at"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>